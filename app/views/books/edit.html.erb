<main>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1> Editing Book</h1>
       <%= form_with model:@book, local: true do |f| %>
       <p>Title</p>
       <%= f.text_field :title %>
       <p>Opinion</p>
       <%= f.text_area :Opinion %>
       <div>
        <%= f.submit 'Update Book' %>
       </div>
       <% end %>
      <div Class>
       <%= link_to 'Show' , book_path %>
       <a> | </a>
       <%= link_to 'Back' , books_path %>
      </div>
    </div>
  </div>
</main>