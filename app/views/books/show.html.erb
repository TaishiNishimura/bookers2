<main>
  <%= render 'books/info', books: @books %>

   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table table-hover table-inverse">

       <tbody>
           <tr>
            <td>
             <%= attachment_image_tag @user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td>
             <%= link_to current_user.name , user_path %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.Opinion %>
            </td>
            <td>
               <%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %>
            </td>
            <td>
               <% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete %>
               <% end %>
            </td>
           </tr>
       </tbody>
      </t>
    </table>
   </div>
</main>