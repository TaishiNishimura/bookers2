  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
        <tbody>
          <tr></tr>
           <tr>
	          <th>name</th>
	          <th>
	           <%= current_user.name %>
	          </th>
           </tr>
           <tr>
	          <th>introduction</th>
	          <th>
	            <%= current_user.introduction %>
	          </th>
           </tr>
        </tbody>
        </table>
        <script src="https://kit.fontawesome.com/8a2ca55f79.js" crossorigin="anonymous"></script>
        <div class="row">
         <%= link_to  edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
         <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :Opinion %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>